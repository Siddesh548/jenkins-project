pipeline {
    agent any
    environment {
        IMAGE_NAME = "gitops-app"
    }
    stages {
        stage('Validation') {
            steps {
                echo "Validating Docker Environment..."
                sh "sudo docker version" 
            }
        }
        stage('Build & Deploy') {
            steps {
                script {
                    // Try to get branch name from different possible Jenkins variables
                    def branch = env.BRANCH_NAME ?: env.GIT_BRANCH ?: "unknown"
                    
                    // Clean up branch name (removes 'origin/' if it exists)
                    branch = branch.replaceAll('origin/', '')
                    echo "--- PROCESSED BRANCH NAME: ${branch} ---"
                    
                    dir('jen-demo') {
                        if (branch == 'main') {
                            echo "--- DEPLOYING TO DEV (8081) ---"
                            sh "sudo docker build -t ${IMAGE_NAME}:dev ."
                            sh "sudo docker rm -f dev-container || true"
                            sh "sudo docker run -d --name dev-container -p 8081:80 ${IMAGE_NAME}:dev"
                        } 
                        else if (branch == 'branch1') {
                            echo "--- DEPLOYING TO BRANCH1 (8082) ---"
                            sh "sudo docker build -t ${IMAGE_NAME}:prod ."
                            sh "sudo docker rm -f prod-container || true"
                            sh "sudo docker run -d --name prod-container -p 8082:80 ${IMAGE_NAME}:prod"
                        }
                        else {
                            echo "ERROR: Branch '${branch}' does not match 'main' or 'branch1'."
                        }
                    }
                }
            }
        }
    }
}