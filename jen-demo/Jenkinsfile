pipeline {
    agent any
    environment {
        IMAGE_NAME = "gitops-app"
    }
    stages {
        stage('Validation') {
            steps {
                echo "Validating Environment..."
                sh "docker version" 
            }
        }
        stage('Build & Deploy') {
            steps {
                script {
                    // This print statement is vital for your demo debugging
                    echo "Jenkins detected Branch Name: ${env.BRANCH_NAME}"
                    
                    // Move into the folder where your code lives
                    dir('jen-demo') {
                        if (env.BRANCH_NAME == 'main') {
                            echo "--- DEPLOYING TO DEV ENVIRONMENT (Port 8081) ---"
                            sh "sudo docker build -t ${IMAGE_NAME}:dev ."
                            sh "sudo docker rm -f dev-container || true"
                            sh "sudo docker run -d --name dev-container -p 8081:80 ${IMAGE_NAME}:dev"
                        } 
                        else if (env.BRANCH_NAME == 'branch1') {
                            echo "--- DEPLOYING TO PROD ENVIRONMENT (Port 8082) ---"
                            sh "sudo docker build -t ${IMAGE_NAME}:prod ."
                            sh "sudo docker rm -f prod-container || true"
                            sh "sudo docker run -d --name prod-container -p 8082:80 ${IMAGE_NAME}:prod"
                        }
                        else {
                            echo "Branch ${env.BRANCH_NAME} is not configured for auto-deploy."
                        }
                    }
                }
            }
        }
    }
    post {
        success {
            echo "Deployment successful! Check your VM IP at port 8081 (Dev) or 8082 (Prod)."
        }
    }
}