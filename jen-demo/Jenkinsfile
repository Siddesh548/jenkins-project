pipeline {
    agent any
    environment {
        IMAGE_NAME = "gitops-app"
    }
    stages {
        stage('Debug Info') {
            steps {
                // This will tell us EXACTLY why the next stages are skipping
                script {
                    echo "FULL BRANCH NAME: ${env.BRANCH_NAME}"
                    echo "GIT BRANCH: ${env.GIT_BRANCH}"
                }
            }
        }

        stage('Deploy to Dev (Main)') {
            when {
                beforeAgent true
                expression { 
                    return env.BRANCH_NAME == 'main' || env.GIT_BRANCH == 'main' || env.GIT_BRANCH == 'origin/main'
                }
            }
            steps {
                dir('jen-demo') {
                    echo "--- BUILDING & RUNNING MAIN ---"
                    sh "sudo docker pull nginx"
                    sh "sudo docker rm -f dev-container || true"
                    sh "sudo docker run -d --name dev-container -p 8081:80 nginx"
                }
            }
        }

        stage('Deploy to Branch1') {
            when {
                beforeAgent true
                expression { 
                    return env.BRANCH_NAME == 'branch1' || env.GIT_BRANCH == 'branch1' || env.GIT_BRANCH == 'origin/branch1'
                }
            }
            steps {
                dir('jen-demo') {
                    echo "--- BUILDING & RUNNING BRANCH1 ---"
                    sh "sudo docker build -t ${IMAGE_NAME}:prod ."
                    sh "sudo docker rm -f prod-container || true"
                    sh "sudo docker run -d --name prod-container -p 8082:80 ${IMAGE_NAME}:prod"
                }
            }
        }
    }
}